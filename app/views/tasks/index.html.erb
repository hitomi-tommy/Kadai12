<div class="search">
  <%= form_with url: tasks_path, method: :get, local: true do |form| %>
    <div class="name">
      <%= form.label :name, t('view.task_name') %>
      <%= form.text_field :name_search, placeholder: t('view.search_with_task_name') %>
    </div>
    <div class="status">
      <%= form.label :status, t('view.task_status') %>
      <%= form.select :status_search, [ t('view.not_yet_started'), t('view.in_progress'), t('view.completed') ], include_blank: t('view.please_select') %>
    </div>
    <%= form.hidden_field :search, value: 'true' %>
    <%= form.submit (t('helpers.submit.search')) %>
  <% end %>
</div>
<h1><%= t('view.task_list') %></h1>
<p><%= notice %></p>
<table>
  <tr>
    <th><%= t('view.task_name') %></th>
    <th><%= t('view.task_created_at') %></th>
    <th><%= t('view.task_deadline') %></th>
    <th><%= t('view.task_status') %></th>
  </tr>
<% @task.each do |task| %>
  <tr>
    <td class="task_row"><%= task.name %></td>
    <td ><%= task.created_at %></td>
    <td class="deadline_row"><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= link_to t('view.check_detail'), task_path(task.id) %></td>
    <td><%= link_to t('view.edit_task'), edit_task_path(task.id) %></td>
    <td><%= link_to t('view.delete_task'), task_path(task.id), method: :delete, data: { confirm: t('view.confirm') } %></td>
  </tr>
<% end %>
</table>
<%= link_to t('view.create_new_task'), new_task_path %>
<%= link_to t('view.sort_by_deadline'), tasks_path(sort_expired: "true") %>
